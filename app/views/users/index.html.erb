<h1>Guestbook At A Glance</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <p> Click on the user's name to edit or delete</p>

<% @all_users.each do |user| %>
<tr class="users">
  			<td><%= link_to user.name, user_path(user.id) %></td>
        <td><%= user.id %></td>
			</tr>
		<% end %>
</table>

<%= form_for(@new_user) do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
    </div>
    <div class="actions">
      <%= f.submit "Add" %>
    </div>
    <% end %>
